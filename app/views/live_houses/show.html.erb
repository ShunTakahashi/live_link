<h1 class="top_title">ライブハウスページ</h1>
<div class="user_profile">
  <div class="profile_left">
    <h3>ユーザー名:<%= @live_house.name %></h3>
    <h4>地域:<%= @live_house.prefecture %></h4>
  </div>

  <div class="profile_right">
    <h3>住所:<%= @live_house.address %></h3>
    <h4>電話番号:<%= @live_house.tel %></h4>
  </div>
</div>

<div class="profile_menu_list">

</div>

<div class="profile_content">
  <h2>行く予定のライブ</h2>
  <table>
    <tbody>
    <% @lives.each do |live| %>
      <tr>
        <td><%= l(live.date, format: :default) %></td>
        <td><%= link_to live.title, live_path(live) %></td>
        <% live.place.each do |place| %>
          <td><%= place.name %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>