<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lives.each do |live| %>
    <tr>
      <td><%= live.title %></td>
      <td><%= live.date %></td>
      <td><%= link_to 'Show', live %></td>
      <td><%= link_to 'Edit', edit_live_path(live) %></td>
      <td><%= link_to 'Destroy', live, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_live_path %>